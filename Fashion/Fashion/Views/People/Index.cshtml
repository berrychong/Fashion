@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/top.cshtml";
    
}

<style>
    .word-duiqi {
        padding-left: 18px;
    }

    .table-data {
        border: none;
        width: 80px;
        background-color: white;
        color: gray;
        padding-left: 25px;
    }
    .grxx_table {
        color: gray;
        width: 68%;
        margin-left: 2%;
        float: left;
    }

    .p_char_table {
        color: gray;
        width: 100%;
        margin-left: -20px;
        float: left;
    }

    .grxx_biaotou {
        color: #808080;
        font-size: 1.5em;
        font-style: italic;
        float: left;
        width: 66%;
        margin-left: 4%;
    }

    .xttz_biaotou {
        color: #808080;
        font-size: 1.5em;
        font-style: italic;
        float: left;
        width: 100%;
        margin-top: 20px;
    }

    a img:hover {
        border-bottom: 2px solid #a9b7b7;
    }

    td {
        font-style: italic;
    }

    .fl_left {
        float: left;
    }

    .fl_right {
        float: right;
    }

    #quanshenzhao {
        width: 30%;
        height: 300px;
        float: left;
    }
</style>
<div class="tab_bar">
    <h2 class="tab_ing" onclick="window.location.href = 'Index'">我的主页</h2>
    <h2 onclick="window.location.href = 'myAsks'">提问<span>0</span></h2>
    <h2 onclick="window.location.href = 'myAnsweres'">回答<span>0</span></h2>
    <h2 onclick="window.location.href = 'myCollections'">收藏<span>0</span></h2>
    <h2 onclick="window.location.href = 'Get_Approval'">获赞<span>0</span></h2>
    <h2 onclick="window.location.href = 'Message'">消息<span>0</span></h2>

</div>
<div class="fl_left">
    <div id="quanshenzhao">
        <img src="~/Images/UserImages/QuanShenZhao/quanshenzhao1.jpg" style="width: 100%; height: 100%; border-radius: 16px;" />
    </div>

    <div class="grxx_biaotou">
        <div class="fl_left">个人信息：</div>
        <div class="fl_right">
            <a href="Change_Data" title="修改">
                <img src="~/Images/People-Index-xiugaiziliao.png" />
            </a>
        </div>
    </div>
    <table id="grxx_table" class="grxx_table" cellspacing="20">
        <tr><td>真实姓名：</td><td>@ViewData["realName"]</td></tr>
        <tr><td>出生年月：</td><td>@ViewData["BirthDate"]</td></tr>
        <tr><td>职&nbsp;&nbsp;&nwbsp;&nbsp;&nbsp;&nbsp;&nbsp;业：</td><td> @ViewData["Profession"]</td></tr>
        <tr><td>手&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;机：</td><td>@ViewData["PhoneNumber"]</td></tr>
        <tr><td>学&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;历：</td><td>@ViewData["CheckEducationalBackground"]</td></tr>
        <tr><td>爱&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;好：</td><td>@ViewData["Interest"]</td></tr>
    </table>
</div>

<div class="xttz_biaotou">
    <div class="fl_left">体型特征：</div>
    <div class="fl_right">
        <a href="Change_Data#sttz" title="修改">
            <img src="~/Images/People-Index-xiugaiziliao.png" />
        </a>
    </div>
</div>
<table id="p_char_table" class="p_char_table" cellspacing="20">
    <tr><td class="word-duiqi">身高：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["Height"]" /></td><td></td><td class="word-duiqi">腰围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["YaoWei"]" /></td></tr>
    <tr><td class="word-duiqi">体重：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["Weight"]" /></td><td></td><td class="word-duiqi">臀围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["TunWei"]" /></td></tr>
    <tr><td class="word-duiqi">肤色：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["SkinColor"]" /></td><td></td><td class="word-duiqi">臂围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["ArmGirth"]" /></td></tr>
    <tr><td class="word-duiqi">腿长：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["LegLength"]" /></td><td></td><td class="word-duiqi">胸围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["XiongWei"]" /></td></tr>
    <tr><td>大腿围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["ThighGirth"]" /></td><td></td><td>小腿围：</td><td><input type="text" disabled="disabled" class="table-data" value="@ViewData["CalfGirth"]" /></td></tr>

</table>
